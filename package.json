{
  "name": "@vf/academy-root",
  "version": "1.0.0",
  "private": "true",
  "main": "index.js",
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/**/*"
    ],
    "nohoist": [
      "**/react",
      "**/react-dom"
    ]
  },
  "scripts": {
    "bootstrap": "lerna clean --yes && git clean -xdf && yarn && lerna bootstra",
    "build": "lerna run --stream build",
    "build:app": "lerna run --stream build:app",
    "build:assembly": "lerna run --stream asbuild",
    "dev": "yarn lerna run dev --scope=@vf/app",
    "lerna:version": "yarn lerna version --conventional-commits",
    "postbuild": "cp packages/vf-assembly/build/main.wasm packages/vf-app/vf-app/public"
  },
  "volta": {
    "node": "16.17.0",
    "yarn": "1.22.19"
  },
  "devDependencies": {
    "assemblyscript": "^0.12.3",
    "lerna": "^5.5.1"
  }
}
